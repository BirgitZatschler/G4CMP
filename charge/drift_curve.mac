# Generate entire drift curve in one macro (no loops)

/tracking/verbose 1

/control/getEnv G4CMP_HIT_SUFFIX

/g4cmp/voltage 0.01 volt
/g4cmp/HitsFile epos_0.01v-{G4CMP_HIT_SUFFIX}.txt
/run/initialize
/run/beamOn 10

/g4cmp/voltage 1.5 volt
/g4cmp/HitsFile epos_1.5v-{G4CMP_HIT_SUFFIX}.txt
/run/beamOn 10

/g4cmp/voltage 2 volt
/g4cmp/HitsFile epos_2v-{G4CMP_HIT_SUFFIX}.txt
/run/beamOn 10

